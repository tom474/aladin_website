<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aladin Homepage</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/reset.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/homepage-customer.css" />
    <%- include ('partials/head') %>
  </head>
  <body>
    <%- include ('partials/nav-customer')%>
    <!-- banner -->
    <section id="banner">
      <div class="banner container-lg">
        <div class="row">
          <div
            class="col-lg-7 col-md-5 col-sm-4 d-flex flex-column justify-content-center"
          >
            <h1>
              Neon Orange Lace Up <br />
              Clear Strap Boots
            </h1>
            <p>
              Neon Orange Lace Up Clear Strap Boots are vibrant,
              attention-grabbing footwear with a bold neon orange color and
              transparent strap details. They offer a unique and modern look,
              perfect for making a fashion statement.
            </p>
            <div class="my-2">
              <button class="btn">
                <a href="#hot">Buy Now</a>
              </button>
            </div>
          </div>
          <div class="col-lg-5 col-md-7 col-sm-8 d-flex justify-content-end">
            <img
              class="img-fluid"
              src="/images/customer/banner3.png"
              alt="banner image"
            />
          </div>
        </div>
      </div>
    </section>
    <!-- main -->
    <section id="categories">
      <div class="container-lg categories my-4">
        <h1>Category</h1>
        <div class="content-box mt-5">
          <div class="row w-100">
            <% categories.forEach((category) => { %>
            <div class="col-lg-4 col-md-4 col-sm-4 card-display">
              <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
                <a href="/customer/<%= user._id %>/category/<%=category%>">
                  <div class="cate-img">
                    <div class="img-border">
                      <% if (category === "Beauty Cosmetic") {%>
                      <img
                        class="img-fluid"
                        src="/images/customer/category2.png"
                        alt="<%= category %>"
                      />
                      <% } else if (category === "Fashion") { %>
                      <img
                        class="img-fluid"
                        src="/images/customer/category1.png"
                        alt="<%= category %>"
                      />
                      <% } else if (category === "Electronics") { %>
                      <img
                        class="img-fluid"
                        src="/images/customer/category3.png"
                        alt="<%= category %>"
                      />
                      <% } else if (category === "Sports & Outdoors") { %>
                      <img
                        class="img-fluid"
                        src="/images/customer/category4.png"
                        alt="<%= category %>"
                      />
                      <% } else if (category === "Home & Kitchen") { %>
                      <img
                        class="img-fluid"
                        src="/images/customer/category5.png"
                        alt="<%= category %>"
                      />
                      <% } else { %>
                      <img
                        class="img-fluid"
                        src="/images/customer/category6.png"
                        alt="<%= category %>"
                      />
                      <% } %>
                    </div>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><%=category%></h5>
                  </div>
                </a>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </section>
    <!-- HOT -->
    <section id="hot">
      <div class="container-lg rec-box py-1 my-4">
        <h1>Hot Deal</h1>
        <div class="row product my-5">
          <div class="group-by">
            <div class="dropdown ms-2">
              <form
                action="/customer/homepage/<%= user._id %>#hot"
                method="GET"
              >
                <input
                  type="text"
                  name="min"
                  placeholder="Minimum price..."
                  class="p-1 rounded"
                />
                <input
                  type="text"
                  name="max"
                  placeholder="Maximum price..."
                  class="p-1 rounded"
                />
                <button type="submit" class="p-1 rounded">Find</button>
              </form>
            </div>
          </div>

          <%products.forEach((product) => {%>
          <div class="col-lg-4 col-md-6 col-ms-12 my-3 d-flex product-col">
            <a href="/customer/<%= user._id %>/products/<%=product._id%>">
              <div class="product-card ms-2 position-relative">
                <div class="product-image border shadow">
                  <img
                    src="data:<%= product.image.mimeType %>;base64,<%= product.image.data.toString('base64') %>"
                    class="project-thumb"
                    alt="<%=product.name%>"
                  />
                </div>
                <div class="overlay product-effect position-absolute">
                  <div class="p-3 d-flex justify-content-center w-100">
                    Click To View
                  </div>
                </div>
                <div
                  class="product-info d-flex pt-3 align-items-center flex-column"
                >
                  <h3><%=product.name%></h3>
                  <p class="mb-0"><%=product.price%>$</p>
                </div>
              </div>
            </a>
          </div>
          <%})%>
        </div>
      </div>
    </section>
    <!-- our service -->
    <section id="service">
      <div class="container-lg mt-5 pb-3">
        <div class="row">
          <div class="col-lg-4 border d-flex flex-row p-4 align-items-center">
            <img src="/images/customer/icon-1.png" alt="freeship" />
            <div class="d-flex flex-column ms-3">
              <h5>FREESHIP</h5>
              <p class="mb-0">For all order over 99.000VND</p>
            </div>
          </div>
          <div class="col-lg-4 border d-flex flex-row p-4 align-items-center">
            <img src="/images/customer/icon-2.png" alt="on time" />
            <div class="d-flex flex-column ms-3">
              <h5>ON TIME</h5>
              <p class="mb-0">You will get your order on time</p>
            </div>
          </div>
          <div class="col-lg-4 border d-flex flex-row p-4 align-items-center">
            <img src="/images/customer/icon-1.png" alt="protective" />
            <div class="d-flex flex-column ms-3">
              <h5>PROTECTIVE</h5>
              <p class="mb-0">Your product will be given a good packaging</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include ('partials/footer-customer')%>
    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
      integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
      integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
      crossorigin="anonymous"
    ></script>
    <script src="/js/homepage-customer.js"></script>
  </body>
</html>
