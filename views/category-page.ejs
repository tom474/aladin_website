        <meta
            name="msapplication-TileImage"
            content="./assets/favicon/ms-icon-144x144.png"
        />
        <meta name="theme-color" content="#ffffff" />

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Poppins:wght@400;500;600;700&family=Roboto+Serif:opsz,wght@8..144,400;8..144,500;8..144,600&display=swap"
            rel="stylesheet"
        />

        <!-- Font Awesome 5 -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
            integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
    </head>
    <body>
        <%- include('partials/nav-customer')%>
        <!-- banner -->
        <section id="banner">
            <div class="banner container-lg">
                <div class="row " style="position: relative;">
                    <div>
                        <% if (category === "Beauty Cosmetic") {%>
                            <img class="img-fluid" src="/images/customer/banner-category2.png" alt="<%= category%>">
                        <% } else if (category === "Fashion") { %>
                            <img class="img-fluid" src="/images/customer/banner-category.png" alt="<%= category%>">
                        <% }  else if (category === "Electronics") { %>
                            <img class="img-fluid" src="/images/customer/banner-category3.png" alt="<%= category%>">
                        <% }  else if (category === "Sports & Outdoors") { %>
                            <img class="img-fluid" src="/images/customer/banner-category4.png" alt="<%= category%>">
                        <% }   else if (category === "Home & Kitchen") { %>
                            <img class="img-fluid" src="/images/customer/banner-category5.png" alt="<%= category%>">
                        <% }   else { %>
                            <img class="img-fluid" src="/images/customer/banner-category6.png" alt="<%= category%>">
                        <% } %>  
                    </div>
                    <div class="title d-flex justify-content-center" style="position: absolute ">
                        <h2><%=category%></h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- breadcrumb -->
        <div class="container">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a style="text-decoration: none;" href="/customer/homepage">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page"><%=category%></li>
            </ol>
          </nav>
        </div>
        <!-- HOT -->
        <section id="hot">
            <div class="container-lg rec-box py-1 my-4">
                <h1>
                    PRODUCT
                </h1>
                <div class="row product my-5">
                    <%products.forEach((product) => {%>
                        <div class="col-lg-4 col-md-6 col-ms-12 my-3 d-flex product-col" >
                            <a href="/customer/products/<%=product.id%>" style="text-decoration: none; color: black">
                                <div class="product-card ms-2" style="position: relative" >
                                    <div class="product-image border shadow">
                                        <img src="/images/customer/<%=product.image%>" class="project-thumb" width="300px" height="302px" alt="<%=product.name%>"   />   
                                        <div class="overlay product-effect" style="position: absolute">
                                            <div class="p-3 d-flex justify-content-center w-100" >
                                                ADD TO CART
                                            </div>      
                                        </div>
                                    </div>
                                    <div class="product-info d-flex pt-3 align-items-center flex-column">
                                        <h3><%=product.name%></h3>
                                        <p class="mb-0"><%=product.price%>$</p>
                                    </div>    
                                </div>            
                            </a>
                        </div>
                    <%})%>           
                </div>
            </div>
        </section>
        <%- include ('partials/footer-customer')%>
        <!-- JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"
        ></script>
        <script src="/js/category.js"></script>

    </body>
</html>